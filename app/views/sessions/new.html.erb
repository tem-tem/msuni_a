<%= form_tag "/admin", style: "max-width: 400px; margin: 10% auto;" do %>
  <div class="form-group">
    <div class="input-group">
      <input type="email" name="email" class="form-control form-control-lg" id="emailInput" aria-describedby="emailHelp" placeholder="Введите почту">
      <div class="input-group-append">
        <button class="btn btn-outline-primary" type="submit">Войти</button>
      </div>
    </div>
  </div>
<% end %>


<% if @user %>

  <div class="modal fade bring-to-front" id="confirmModal"
       tabindex="-1"
       role="dialog"
       aria-labelledby="confirmModal"
       aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title text-secondary" id="confirmModalLabel">На указанный адрес отправлен 6-знаковый код, введите его для подтвеждения входа</div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="confirmModalBody">
          <div id="form-errors" style="display:none;"></div>
          <%= form_tag "/admin/auth", remote: true do %>
            <div class="form-group">
              <%= hidden_field_tag 'user_id', @user.id %>
              <div class="input-group mb-3">
                <input type="text" name="token" class="form-control form-control-lg" placeholder="XXXXXX" aria-label="Код подтвеждения" aria-describedby="basic-addon2" maxlength="6">
                <div class="input-group-append">
                  <button class="btn btn-outline-primary" type="submit">Подтвердить</button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <script>
    $('#confirmModal').modal()
  </script>

<% end %>

<div class="row justify-content-center" id="flash" >
  <div class="col-md-4 mt-5 position-fixed" style="z-index:3">
      <div class="alert fade show alert-<%= key %> alert-dismissible fade show bring-to-front" role="alert" style="box-shadow: 0 20px 60px rgba(0,0,0,0.2), 0 4px 10px rgba(0,0,0,0.1)">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
  </div>
</div>

<div class="py-2 my-3 col lecture">

  <div class="row justify-content-center my-3">
    <%= presentation.title %>
  </div>

  <div class="row justify-content-center my-3">
    <div class="col-4">
      <%= link_to pdfjs.full_path(file: "msu_presentations/#{presentation.pdf_filename}"),
      target: "_blank" do %>
      <button type="button" class="btn btn-sm btn-outline-secondary align-self-center">
        PDF
      </button>
      <% end %>
    </div>

    <div class="col-4">
      <%= link_to "/pdfjs/msu_presentations/#{presentation.pptx_filename}", download: presentation.title do %>
      <button type="button" class="btn btn-sm btn-outline-secondary align-self-center">
        PPTX
      </button>
      <% end %>
    </div>

    <div class="col-4">
      <%= link_to [:admin, presentation.msu_lecture, presentation],
      method: :delete,
      data: { confirm: 'Are you sure?' } do %>
      <button type="button" class="btn btn-sm btn-outline-danger align-self-center">
        <%= octicon "trashcan",
        height: 18,
        fill: '#dc3545',
        class: "text-danger",
          "aria-label": "Удалить" %>
        </button>
        <% end %>
      </div>
  </div>

</div>

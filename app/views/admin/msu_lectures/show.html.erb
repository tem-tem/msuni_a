<% content_for :title do %>
  <title><%= @lecture.title %></title>
<% end %>

<div class="modal fade bring-to-front" id="presModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="presModal"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title text-secondary" id="presModalLabel">Новая презентация</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="presModalBody">
        <!-- Здесь форма -->
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">

    <div class="col-xl-8 col-lg-9 col-md-11 col-sm-12 col-xs-12">

      <div class="btn-toolbar justify-content-between my-3">
        <div class="btn-group">
          <%= link_to [:admin, @lecture.msu_discipline],
              class: "btn btn-outline-primary btn-sm d-flex" do %>
            <%= octicon "arrow-left",
                width: 20,
                height: 20,
                class: "button-icon mr-2 my-auto",
                  "aria-label": "Открыть" %>
            К дисциплине
          <% end %>

          <%= link_to [:edit, :admin, @lecture.msu_discipline, @lecture],
              class: "btn btn-outline-primary btn-sm d-flex" do %>
              <%= octicon "pencil",
                  height: 16,
                  width: 16,
                  class: "button-icon mr-2 my-auto",
                    "aria-label": "Редактировать" %>
              Редактировать лекцию
          <% end %>
        </div>

        <%= link_to [:admin, @lecture.msu_discipline, @lecture],
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "btn btn-outline-danger btn-sm d-flex" do %>
            <%= octicon "trashcan",
                width: 16,
                height: 16,
                class: "button-icon mr-2 my-auto",
                  "aria-label": "Открыть" %>
            Удалить лекцию
        <% end %>

      </div>

      <div class="row">
        <div class="col">
          <h1 class="my-5">
            <%= @lecture.title %>
          </h1>
        </div>
      </div>

      <div class="row ">
        <div class="col">
          <div id="lecture-discipline", class="border-bottom mb-4 text-secondary text-right">
            Дисциплина: <%= @lecture.msu_discipline.title %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-10">
          <div id="lecture_content">
            <%= @lecture.content %>
          </div>
        </div>
      </div>

    </div>

    <div class="col-3">
      <div class="my-3">
        <%= link_to [:new, :admin, @lecture, :msu_presentation],
          type: "button",
          class: "btn btn-outline-secondary btn-sm d-flex justify-content-center ",
          "data-toggle": "modal",
          "data-target": "#presModal",
          remote: true do %>
          <%= octicon "plus",
              width: 16,
              height: 16,
              class: "button-icon mr-2 my-auto",
                "aria-label": "Открыть" %>
          Добавить презентацию
        <% end %>
      </div>
      <% if @lecture.msu_presentations.any? %>
        <div class="text-secondary text-center my-3">
          Презентации этой лекции:
        </div>
        <% @lecture.msu_presentations.each do |p| %>
          <%= render partial:'/admin/msu_presentations/presentation', object: p %>
        <% end %>
      <% else %>
        <div class="text-secondary text-center my-3">
          У этой лекции нет презентации
        </div>
      <% end %>
  </div>
</div>
</div>

<script>
  $(document).ready(function(){
    $('#lecture_content').html(marked("<%= j @lecture.content %>"));

    $('p').each(function(){
      var alt = $(this).children('img').attr('alt');
      if (alt) {

        $(this).append("<div class='img-caption'>" + alt + "</div>");
      }
    });
  });
</script>

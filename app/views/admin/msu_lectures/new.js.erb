
$('#itemModal').modal();
$('#itemModal').on('shown.bs.modal', function() {
  $('#input-lecture-title').focus();
});
$('#itemModalLabel').html('Новая лекция');
$('#itemModalBody')
  .html("<%= j render 'admin/msu_lectures/new_form' %>");

  var error = "<%= j flash[:danger] %>";

  if (error){
    $("#lecture-errors").addClass("text-danger mb-3");
    $("#lecture-errors").html(error);
    $("#lecture-errors").show(200);
  }

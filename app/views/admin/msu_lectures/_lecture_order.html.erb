
<li class="row lecture lectureLi justify-content-center my-4" id="lecture-order-<%= lecture.id %>" style="cursor: grab; cursor: -webkit-grab;">
  <input type="text" hidden value="<%= lecture.id %>">
  <div class="title col my-3">
    <h5>
      <span id="lectureOrderBadge-<%= lecture.id %>" class="badge badge-secondary" style="opacity:0.4;">
        <%= lecture.order %>
      </span>
      <%= lecture.title %>
    </h5>
  </div>
</li>

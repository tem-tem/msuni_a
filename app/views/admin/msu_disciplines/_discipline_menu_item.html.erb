
<div class="row border-bottom discipline align-middle" id="discipline-<%= discipline.id %>">
  <%= link_to [:admin, discipline],
              class: "col-10 py-3",
              id: "discipline-#{ discipline.id }-link" do %>
    <p id="discipline-<%= discipline.id %>-name">
      <%= discipline.title %>
      <%  if discipline.msu_lectures.any?  %>
        <span class="ml-2 badge badge-pill badge-secondary">
          <%= discipline.msu_lectures.count%>
        </span>
      <% end %>
    </p>
  <% end %>

  <%= link_to [:edit, :admin, discipline],
      remote: true,
      class: "col-2 card-botton card-botton-primary" do %>

    <%= octicon "pencil",
        :height => 18,
        class: "button-icon mx-auto",
        "aria-label": "Редактировать дисциплину",
        "data-toggle": "modal",
        "data-target": "#newDisciplineModal"  %>

  <% end %>



<tr>
  <th scope="row"><%= index %></th>
  <td>
    <%= user.name %>
    <% if user.admin %>
          <% if current_user?(user) %>
          <span class="ml-2 badge badge-pill badge-success">
            Вы
          </span>
          <% else %>
            <span class="ml-2 badge badge-pill badge-info">
              Админ
            </span>
          <% end %>
    <% end %>
  </td>
  <td>
    <% unless (current_user?(user)) %>
      <%= link_to [:admin, user],
          class: "d-block my-3 mw-100",
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: "btn btn-outline-danger btn-sm align-self-center",
          remote: true do %>
          Удалить
      <% end %>
    <% end %>
  </td>
</tr>

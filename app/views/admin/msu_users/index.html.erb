
<%= link_to [:new, :admin, :msu_user],
    id: 'new_user',
    remote: true,
    class: "col-2 discipline-button d-flex align-items-center justify-content-center" do %>
  <%= octicon "plus",
      height: 36,
      "aria-label": "Добавить пользователя",
      "data-toggle": "modal",
      "data-target": "#newUserModal"  %>
<% end %>

<div class="modal fade bring-to-front" id="newUserModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="newUserModal"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title text-secondary" id="newUserModalLabel">
          Новый пользователь
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="newUserModalBody">
        <!-- Форма создания нового пользователя -->
      </div>
    </div>
  </div>
</div>


<% @users.each do |u| %>
  <%= render partial: 'admin/msu_users/user', object: u %>
<% end %>
